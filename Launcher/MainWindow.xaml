<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Launcher" Height="250" Width="400"
        WindowStyle="None" ResizeMode="NoResize">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Введите параметры:" FontWeight="Bold" Margin="0 0 0 10"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Операция:" Width="80"/>
                <TextBox x:Name="OperationBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="A:" Width="80"/>
                <TextBox x:Name="Box_1" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="B:" Width="80"/>
                <TextBox x:Name="Box_2" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DEBUG:" Width="80"/>
                <CheckBox x:Name="DebugCheck"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Log File:" Width="80"/>
                <TextBox x:Name="LogFileBox" Width="200" Text="log.txt"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Content="Запустить" Click="Launch_Click" Width="120" Margin="5"/>
                <Button Content="Выход" Click="Exit_Click" Width="120" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

