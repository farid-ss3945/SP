<Window x:Class="ReactionTimeTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест времени реакции" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F0F8FF">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Тест времени реакции"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"
                   Foreground="#191970"/>

        <!-- Область сигнала -->
        <Border Grid.Row="1" 
                x:Name="SignalArea"
                Width="400"
                Height="250"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#DCDCDC"
                BorderBrush="#A9A9A9"
                BorderThickness="3"
                Margin="20">
            <TextBlock x:Name="StatusText"
                       Text="Нажмите 'Начать тест' для старта"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="#696969"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Кнопка реакции -->
        <Button Grid.Row="2"
                x:Name="ReactionButton"
                Content="НАЖМИ МЕНЯ!"
                Width="250"
                Height="60"
                FontSize="20"
                FontWeight="Bold"
                Margin="0,20,0,20"
                HorizontalAlignment="Center"
                Background="#FF4500"
                Foreground="White"
                BorderThickness="0"
                IsEnabled="False"
                Click="ReactionButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        BorderBrush="{TemplateBinding BorderBrush}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF6347"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#DC143C"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#C0C0C0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Панель управления -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,20">
            
            <Button x:Name="StartButton"
                    Content="Начать тест"
                    Width="120"
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="10,0"
                    Background="#228B22"
                    Foreground="White"
                    BorderThickness="0"
                    Click="StartButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#32CD32"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#006400"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="ResetButton"
                    Content="Сбросить"
                    Width="120"
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="10,0"
                    Background="#B22222"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ResetButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DC143C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#8B0000"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Панель результатов -->
        <Border Grid.Row="4"
                Background="#E6E6FA"
                BorderBrush="#9370DB"
                BorderThickness="2"
                CornerRadius="10"
                Margin="20,0,20,20"
                Padding="15">
            <TextBlock x:Name="ResultsText"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Foreground="#4B0082"
                       FontWeight="Medium"
                       Text="Тестов: 0/5"/>
        </Border>
    </Grid>
</Window>